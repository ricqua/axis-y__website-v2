<section class="home-page__hero">
  <img class="home-page__hero--image1" src="{{ section.settings.image1 | img_url: "1440x" }}" alt="hero image">
  <img class="home-page__hero--image2" src="{{ section.settings.image2 | img_url: "749x" }}" alt="hero image" >

  <div>
    <h1>{{ section.settings.title1 }}</h1>
    <h2>{{section.settings.title2 }}</h2>
    <a class="greenButton" href="{{ section.settings.button_link }}" >{{ section.settings.button_label }}</a>
  </div>
</section>


<style>
 .home-page__hero{
   width: 100%;
   height: 784px;
   position: relative;
   overflow: hidden;
   display: flex;
   justify-content: flex-start;
   align-items: center;
 }

 .home-page__hero img{
    position: absolute;
    bottom: 0;
    right: 0;
    min-height: 100%;
    min-width: 100%;
    width: auto;
 }

  .home-page__hero--image1{
    display: block;
  }

 .home-page__hero--image2{
   display: none;
 }

 .home-page__hero div {
  max-width: 1440px;
  width: 100%;
  margin: auto;
  z-index: 1;
  padding: 48px;
 }

 .home-page__hero h1 {
  text-align: left;
  font-weight: 500;
  font-size: 80px;
  line-height: 96px;
  color: black;
 }

 .home-page__hero h2 {
   text-align: left;
  font-weight: 200;
  font-size: 80px;
  line-height: 96px;
  font-style: italic;
  font-family: restora;
  margin: 0;
  color: black;
  padding-bottom: 32px;
 }

  @media (max-width: 749px) {
    .home-page__hero{
      height: 603px;
      justify-content: center;
      align-items: flex-start;
    }

    .home-page__hero div{
      margin: unset;
      padding: 64px 16px 16px 16px;
      height: 100%;
    }

    .home-page__hero img{
      position: absolute;
      bottom: 0;
      right: 0;
      height: auto;
      width: 100%;
      min-height: unset;
     min-width: unset;
    }

    .home-page__hero--image1{
      display: none;
    }

    .home-page__hero--image2{
      display: block;
    }

    .home-page__hero h1 {
      font-size: 48px;
      line-height: 48px;
    }

    .home-page__hero h2 {
      font-size: 48px;
      line-height: 48px;
    }

     .home-page__hero a {
      /* display: block; */
      /* margin-top: auto; */
    }
    
  }
</style>



{% schema %}
{
  "name": "Home-page__hero",
  "class": "index-section",
  "settings": [
      { 
        "type": "text",
        "id": "title1",
        "label": "Title 1",
        "default": "Made for me"
      },
      { 
        "type": "text",
        "id": "title2",
        "label": "Title 2",
        "default": "by me"
      }, 
      {
      "type": "image_picker",
      "id": "image1",
      "label": "Timeline image - Desktop"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Timeline image - Mobile"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}