<section class="article-page__hero">
  <img src="{{ article.image | img_url: "1440x" }}" alt="{{article.image.alt}}">
</section>


<div class="article-page__richText article-page__richText--header">
  <h1 class="article__title" id="title-0">{{ article.title }}</h1>
  {% if section.settings.blog_show_author %}
    <span class="article__author">{{ 'blogs.article.by_author' | t: author: article.author }}</span>
  {% endif %}

  {% if section.settings.blog_show_date %}
    <label class="article__date">
      {{ article.published_at | time_tag: format: 'date' }}
    </label>
  {% endif %}
  
  <ul class="blog-page__tagsContainer article-page__tagsContainer" aria-label="{{ 'blogs.article.tags' | t }}">
    {% for tag in article.tags %}
    <li>
      <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="blog-page__tag">{{ tag }}</a>
    </li>
    {% endfor %}
  </ul>
</div>

<div class="article-page__richText">
  {{ article.content }}
</div>

{% if section.settings.show_share_buttons %}
  {% include 'social-sharing', share_title: article.title, share_permalink: article.url, share_image: article.image %}
{% endif %}



<style>
  .article-page__hero{
    position: relative;
    min-width: 100%;
    height: 680px;
    overflow: hidden;
  }

  .article-page__hero img{
