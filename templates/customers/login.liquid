<section class="login-page">
  <!-- <a href="/" class="login-page__backButton">
    {% include 'icon-chevron-left' %}
  </a> -->

  <!-- <a href="/" class="login-page__closeButton"> {% include 'icon-close' %} </a> -->

  <div
    class="form-message form-message--success hide"
    id="ResetSuccess"
    tabindex="-1"
  >
    {{ "customer.recover_password.success" | t }}
  </div>

  <!-- LOGIN FORM -->
  {% form 'customer_login', novalidate: 'novalidate' %}
      <h1 id="LoginHeading">{{ "customer.login.title" | t }}</h1>

      <!-- MESSAGE ERRORS -->
      {%- if form.errors -%}
      <div class="form-message form-message--error">
        <h2 class="h3 form-message__title" tabindex="-1" data-form-status>
          {{ "contact.form.error_heading" | t }}
        </h2>
        {{ form.errors | default_errors }}
      </div>
      {%- endif -%}

      <label for="CustomerEmail">Email</label>
      <input type="email" name="customer[email]" id="CustomerEmail"
      autocomplete="email" autocorrect="off" autocapitalize="off" {%- if form.errors
      contains 'form' -%} class="input--error" aria-invalid="true" {%- endif -%} >

      <label for="CustomerPassword">Password</label>
      <input type="password" value="" name="customer[password]"
      id="CustomerPassword" {%- if form.errors contains 'form' -%}
      class="input--error" aria-invalid="true" {%- endif -%} >

      <!-- REMEMBER ME AND FORGOT PASSWORD BUTTONS -->
      <div class="login-page__recoverPassword">
        <!-- <p>Keep me logged in</p>        -->
        <!-- <p><a href="/account/recover_password">{{ 'customer.login.forgot_password' | t }}</a></p> -->
        <p>
          <a href="#recover" id="RecoverPassword">{{
            "customer.login.forgot_password" | t
          }}</a>
        </p>
      </div>

      <button type="submit" class="login-page__loginButton">
        {{ "customer.login.sign_in" | t }}
      </button>
  {% endform %}

  <!-- CREATE ACCOUNT SECTION -->
  <div class="login-page__createAccount ">
    <strong>Don't have an account?</strong>
    <p>
      Creating an account saves your details for faster checkout and earns you
      reward points for discounts on future purchases.
    </p>
    <p class="login-page__createAccount--button">
      {{ "layout.customer.create_account" | t | customer_register_link }}
    </p>
  </div>

  <!-- RECOVER PASSWORD MODAL -->
  <section
    id="RecoverPasswordForm"
    class="hide login-page__passwordRecoverSection"
  >
    <div class="login-page">
      <a
        href="#LoginHeading"
        id="HideRecoverPasswordLink"
        class="login-page__closeButton"
      >
        {% include 'icon-close' %}
      </a>
      <!-- <a href="#LoginHeading" id="HideRecoverPasswordLink">{{ 'customer.recover_password.cancel' | t }}</a> -->

      <div class="text-center">
        <h1 id="RecoverHeading">{{ "customer.recover_password.title" | t }}</h1>
        <p>{{ "customer.recover_password.subtext" | t }}</p>
      </div>

      <div class="form-vertical">
        {% form 'recover_customer_password' %} 
  
        {% if
        form.posted_successfully? %}
        <span class="hide reset-password-success"></span>
        {% endif %}

        <label for="RecoverEmail">{{
          "customer.recover_password.email" | t
        }}</label>
        <input
          type="email"
          value=""
          name="email"
          id="RecoverEmail"
          class="input-full{% if form.errors %} input--error{% endif %}"
          autocorrect="off"
          autocapitalize="off"
          {%
          if
          form.errors
          %}
          aria-invalid="true"
          aria-describedby="RecoverEmail-email-error"
          {%-
          endif
          -%}
        />
        {%- if form.errors -%}
        <span id="RecoverEmail-email-error" class="input-error-message">
          <span class="visually-hidden"
            >{{ "general.accessibility.error" | t }}
          </span>
          {% include 'icon-error' %}
          <span>{{ form.errors.messages["form"] }}</span>
        </span>
        {%- endif -%}
        <div class="text-center">
          <button type="submit" class="greenButton">
            {{ "customer.recover_password.submit" | t }}
          </button>
    
        </div>
        {% endform %}
      </div>
    </div>
  </section>

  <!-- GUEST LOGIN -->
  {% if shop.checkout.guest_login %}
  <div class="login-page__guestLoginSection">
    <hr class="hr--invisible" />
    <h1>{{ "customer.login.guest_title" | t }}</h2>

    {% form 'guest_login' %}
    <input
      type="submit"
      class="clearButton"
      value="{{ 'customer.login.guest_continue' | t }}"
      
    />
    {% endform %}
  </div>
  {% endif %}
</section>

<style>
  .login-page__guestLoginSection{
    padding-top: 64px;
  }
</style>

